// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
}

model Book {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String    @unique
  ISBN13     String
  author   String
  priceCents Int
}
